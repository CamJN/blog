<section class="col-md-12">
<header>
<h1>
  <%= @article.title %>
</h1>
</header>

<p>
  <%= @article.text %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>

<% if user_signed_in? %>
<h2>Add a comment:</h2>
<%= render "comments/form" %>
<% end %>
<footer>
<% if user_signed_in? %>
<%= link_to 'Edit Article', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back to Articles', articles_path %>
</footer>
</section>
