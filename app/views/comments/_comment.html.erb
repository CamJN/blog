<div class="panel panel-default">
	<div class="panel-heading">
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </div>
  <div class="panel-body">
    <%= comment.body %>
    <p>
      <% if user_signed_in? %>
      <%= link_to 'Delete Comment',
               [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  </div>
</div>
